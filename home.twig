{% extends "layout.twig" %}
{% block content %}

<section class="page home">

			<!-- Header Include !-->
	<header class="template-header">

		<div class="header-content">
			<div class="company-info">
				{{widget('logo', 'companylogo', {"defaultlogo": asset('images/logo.png')})|raw}}
				{{widget('companyname', 'companyname', {"business": "profile"})|raw}}
			</div>

			{{widget('content', 'header-subtext', {content: 'Lorem Ipsum Dolor Sit Amet', lines: 'all'})|raw}}

			{{widget('button', 'header-button', {italic: false, text:'button', 'align':'widget-align-center'})|raw}}
		</div>

		<div class="nav">
			{{widget('extendednavigation', 'navigationheader', {"align":"center"})|raw}}
		</div>

	</header>

	<div class="wrapper">

		<div class="main-zone-container">
			{{zone('main')|raw}}
			{% include 'includes/footer.twig' %}
		</div>

	</div>

</section>


{% endblock %}
